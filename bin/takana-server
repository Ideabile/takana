#!/usr/bin/env node

'use strict';

process.title = 'takana-server';

require("coffee-script");

var path     = require('path'),
    Core     = require(path.join(__dirname, '../lib/core')),
    helpers  = require(path.join(__dirname, '../lib/support/helpers')),
    shell    = require('shelljs');


shell.mkdir('-p', helpers.sanitizePath('~/.takana/'))

new Core({
  editorPort:  48627,
  httpPort:    48626,
  scratchPath: helpers.sanitizePath('~/.takana/scratch'),
  database:    (helpers.sanitizePath('~/.takana/') + 'database.yaml')
}).start()
